<h1>Restaurant Form </h1>

<% if params[:failed_submit] %>
  <% @restaurant.valid? %>
  <h3>This restaurant was not added because:</h3>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @restaurant do |f|%>

<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :location, "Location" %>
<%= f.text_field :location %>

<%= f.label :dining_type, "Dining Type" %>
<%= f.text_field :dining_type %>

<%= f.label :description, "Description" %>
<%= f.text_area :description %>

<%= f.label :hours, "Hours" %>
<%= f.text_field :hours %>

<%= f.submit "Add Restaurant" %>
<% end %>
