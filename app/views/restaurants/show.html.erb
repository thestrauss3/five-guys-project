<center><h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.description %></h3>
</center>
  <ul style="width: 10%; margin-left: auto; margin-right: auto;">
    <li><%= @restaurant.dining_type %></li>
    <li><%= @restaurant.hours %></li>
    <li><%= @restaurant.location %></li>
  </ul>
  <center>
<h3>Burgers available at <%= @restaurant.name %></h3>
  <ul>
  <% @restaurant.burgers.each do |b| %>
    <li><%= link_to b.name, burger_path(b) %></li>
  <% end %>
  </ul>
<hr/><h3><%= link_to "Add a new burger to this restaurant", new_restaurant_burger_path(@restaurant) %></h3></center>
