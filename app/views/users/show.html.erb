<center>
<h1>Hi there <%= @user.username %>! </h1>
<% if current_user.avatar.present? %>
<%= image_tag(current_user.avatar.url, size: "75x75", class: 'avatar_icon') %>
<% else %>
<%= image_tag("fallback/default.jpg", size: "75x75", class: 'avatar_icon') %>
<% end %>
<p><%= link_to "Add a profile picture!", edit_user_avatar_path(@user) %></p><hr/>

<div class = "burger_submit">
  <h2>My Burger Submissions</h2>
  <% @user.burgers.each do |burger| %>
  <p><%= link_to burger.name, burger_path(burger) %></p>
  <h6><%= link_to "Edit This Burger Submission ", edit_burger_path(burger)%><%= link_to "X", burger, method: :delete, data: {confirm: "Are you sure you want to delete this burger?"}, class: "deletex"%></h6>
    <%=image_tag((burger.image_url), class: "img-profile")%>
    <hr/>
  <% end %>
<hr/></div>

<div class = "">
  <h2>My Burger Reviews</h2>
  <% @user.reviews.each do |review| %>
    <div class="review_tile">
      <h4 class="review-title">Review for <%= review.burger.name %><h4><br />
      <p><%=review.body%></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Delete User Profile", @user, method: :delete, data: {confirm: "Are you sure?"}, class: "delete" %></p>
</center>
