<%= link_to "Add a profile picture!", edit_user_avatar_path(@user) %>
<h1>Hi there <%= @user.username %>! </h1>

<div class = "burger_submit">
  <h2>My Burger Submissions</h2>
  <% @user.burgers.each do |burger| %>
  <p><%= link_to burger.name, burger_path(burger) %>
    <%= link_to "x", burger, method: :delete, data: {confirm: "Are you sure you want to delete this burger?"}%></p>
  <p><%= link_to "Edit This Burger Submission", edit_burger_path(burger)%></p>
  <p><%=image_tag(burger.image_url) %></p>
  <% end %>
</div>

<div class = "">
  <h2>My Burger Reviews</h2>
  <% @user.reviews.each do |review| %>
    <div class="review_tile">
      <h4>Review for <%= review.burger.name %><h4><br />
      <p><%=review.body%></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Delete User Profile", @user, method: :delete, data: {confirm: "Are you sure?"} %></p>
